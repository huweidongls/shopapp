<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_ffffff"
    tools:context="com.jingna.shopapp.pages.ForgotPwd3Activity">

    <RelativeLayout
        style="@style/rl_top_bar">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                style="@style/iv_top_back" />

        </RelativeLayout>

        <TextView
            android:text="忘记密码"
            style="@style/tv_top_title" />

    </RelativeLayout>

    <TextView
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/black_333333"
        android:textSize="16sp"
        android:text="请设置新的登录密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <EditText
            android:inputType="textPassword"
            android:layout_toLeftOf="@+id/rl_is_show"
            android:id="@+id/et_pwd"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:textColor="@color/black_333333"
            android:textColorHint="#999999"
            android:textSize="16sp"
            android:hint="请设置6-20位密码"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/rl_is_show"
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_is_show"
                android:layout_centerInParent="true"
                android:src="@mipmap/miwen"
                android:layout_width="18dp"
                android:layout_height="12dp" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:background="#E4E4E4"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:textSize="14sp"
        android:textColor="#BEBEBE"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:text="备注：请将新密码设置为6-20位，并且由字母、数字和符号两种以上组合"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_sure"
        android:textColor="@color/white_ffffff"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:background="@drawable/bg_ff4d16_25dp"
        android:text="完成"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

</LinearLayout>
