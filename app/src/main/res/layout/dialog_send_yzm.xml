<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_ffffff_9dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@drawable/bg_ffffff_9dp"
        android:layout_width="315dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/tv"
            android:textColor="@color/black_333333"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            android:text="我们将发送短信/语音验证码至:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv"
            android:layout_alignLeft="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginTop="24dp"
            android:layout_below="@+id/tv_number"
            android:background="#E9E9E9"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/tv_number"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:id="@+id/tv_cancel"
                android:background="@drawable/bg_ffffff_bottom_left_9dp"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/black_333333"
                android:text="取消"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_sure"
                android:background="@drawable/bg_ff4f16_bottom_right_9dp"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white_ffffff"
                android:text="确定"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
