<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_top"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:id="@+id/tv1"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#FF0004"
            android:text="商品介绍"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <View
            android:layout_gravity="center_vertical"
            android:background="#D7D7D7"
            android:layout_width="1dp"
            android:layout_height="12dp"/>

        <TextView
            android:id="@+id/tv2"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#686868"
            android:text="规格参数"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <View
            android:layout_gravity="center_vertical"
            android:background="#D7D7D7"
            android:layout_width="1dp"
            android:layout_height="12dp"/>

        <TextView
            android:id="@+id/tv3"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#686868"
            android:text="包装售后"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>

    <ScrollView
        android:layout_below="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/ll1"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:layout_marginLeft="10dp"
                            android:layout_toLeftOf="@+id/tv_name"
                            android:background="#D7D7D7"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_centerInParent="true"
                            android:textColor="#797979"
                            android:textSize="13sp"
                            android:text="商品信息"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <View
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="15dp"
                            android:layout_toRightOf="@+id/tv_name"
                            android:background="#D7D7D7"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                    </RelativeLayout>

                    <ImageView
                        android:layout_marginTop="13dp"
                        android:src="@mipmap/p1"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:src="@mipmap/p2"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:src="@mipmap/p3"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:src="@mipmap/p4"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:src="@mipmap/p5"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:src="@mipmap/p6"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:src="@mipmap/p7"
                        android:adjustViewBounds="true"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl2"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textSize="20sp"
                        android:textColor="@color/black_333333"
                        android:text="显示规格参数表格"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl3"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:textSize="20sp"
                        android:textColor="@color/black_333333"
                        android:text="显示包装售后"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
