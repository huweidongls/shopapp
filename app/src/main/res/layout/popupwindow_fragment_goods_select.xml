<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_alignParentRight="true"
                    android:id="@+id/rl_back"
                    android:layout_width="30dp"
                    android:layout_height="30dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/del" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_pic"
                    android:layout_below="@+id/rl_back"
                    android:layout_width="match_parent"
                    android:layout_height="90dp">

                    <ImageView
                        android:id="@+id/iv_title"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp" />

                    <LinearLayout
                        android:layout_alignBottom="@+id/iv_title"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/iv_title"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FF0004"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/tv_goods_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FF0004"
                            android:textSize="16sp" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_above="@+id/tv_sure"
                    android:layout_below="@+id/rl_pic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:descendantFocusability="blocksDescendants">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp" />

                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_below="@+id/rv"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <TextView
                            android:layout_marginLeft="20dp"
                            android:layout_centerVertical="true"
                            android:textColor="@color/black_333333"
                            android:textSize="15sp"
                            android:text="数量"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_marginRight="20dp"
                            android:orientation="horizontal"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_gravity="center_vertical"
                                android:id="@+id/rl_jianhao"
                                android:layout_marginRight="5dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp">

                                <ImageView
                                    android:layout_centerInParent="true"
                                    android:src="@mipmap/jianhao"
                                    android:layout_width="10dp"
                                    android:layout_height="2dp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_gravity="center_vertical"
                                android:background="#F6F6F6"
                                android:layout_width="45dp"
                                android:layout_height="25dp">

                                <TextView
                                    android:id="@+id/tv_goods_num"
                                    android:layout_centerInParent="true"
                                    android:textColor="@color/black_333333"
                                    android:textSize="12sp"
                                    android:text="1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_gravity="center_vertical"
                                android:id="@+id/rl_jiahao"
                                android:layout_marginLeft="5dp"
                                android:layout_width="25dp"
                                android:layout_height="25dp">

                                <ImageView
                                    android:layout_centerInParent="true"
                                    android:src="@mipmap/jiahao"
                                    android:layout_width="10dp"
                                    android:layout_height="10dp" />

                            </RelativeLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_sure"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="#FF2F07"
                    android:gravity="center"
                    android:text="确定"
                    android:textColor="@color/white_ffffff"
                    android:textSize="15sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
