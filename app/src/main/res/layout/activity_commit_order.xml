<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_ffffff"
    tools:context="com.jingna.shopapp.pages.CommitOrderActivity">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="42dp">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerInParent="true"
                android:src="@mipmap/back_b"
                android:layout_width="9dp"
                android:layout_height="16dp" />

        </RelativeLayout>

        <TextView
            android:layout_centerInParent="true"
            android:textColor="#232325"
            android:textSize="18sp"
            android:text="填写订单"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <ScrollView
        android:layout_above="@+id/rl_bottom"
        android:layout_below="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:elevation="2dp"
                android:background="@color/white_ffffff"
                android:layout_width="match_parent"
                android:layout_height="82dp">

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/black_333333"
                        android:textSize="18sp"
                        android:text="张三"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/black_333333"
                        android:textSize="18sp"
                        android:text="155****4567"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_toLeftOf="@+id/iv_address_right"
                    android:layout_marginBottom="17dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/bg_ff0004_7dp"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:textColor="@color/white_ffffff"
                        android:text="默认"
                        android:layout_width="35dp"
                        android:layout_height="14dp" />

                    <TextView
                        android:ellipsize="end"
                        android:lines="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textColor="#5B5959"
                        android:textSize="12sp"
                        android:text="黑龙江哈尔滨市南岗区汉广街41号金华大厦408室"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_address_right"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/right_b"
                    android:layout_width="7dp"
                    android:layout_height="14dp" />

            </RelativeLayout>

            <LinearLayout
                android:elevation="2dp"
                android:background="@color/white_ffffff"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/dianpu"
                        android:layout_width="17dp"
                        android:layout_height="15dp" />

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/black_333333"
                        android:textSize="14sp"
                        android:text="贝脆思旗舰店"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="18dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@mipmap/lvxing"
                        android:layout_width="90dp"
                        android:layout_height="90dp" />

                    <LinearLayout
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:ellipsize="end"
                            android:lines="1"
                            android:textColor="@color/black_333333"
                            android:textSize="14sp"
                            android:text="良品铺子 夏威夷果265g×3袋 零食…"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginTop="4dp"
                            android:textColor="#636363"
                            android:textSize="12sp"
                            android:text="规格：坚果礼盒"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginTop="4dp"
                            android:textColor="@color/black_333333"
                            android:text="¥198.00"
                            android:textSize="18sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:gravity="center"
                            android:background="@drawable/bg_ff0004_7dp_bord"
                            android:textColor="#FF0004"
                            android:textSize="10sp"
                            android:text="不支持7天无理由退货"
                            android:layout_width="wrap_content"
                            android:layout_height="16dp" />

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="25dp">

                    <TextView
                        android:layout_centerVertical="true"
                        android:textColor="@color/black_333333"
                        android:textSize="14sp"
                        android:text="购买数量"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:id="@+id/rl_jianhao"
                            android:layout_marginRight="5dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp">

                            <ImageView
                                android:layout_centerInParent="true"
                                android:src="@mipmap/jianhao"
                                android:layout_width="10dp"
                                android:layout_height="2dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:background="#F6F6F6"
                            android:layout_width="45dp"
                            android:layout_height="25dp">

                            <TextView
                                android:id="@+id/tv_goods_num"
                                android:layout_centerInParent="true"
                                android:textColor="@color/black_333333"
                                android:textSize="12sp"
                                android:text="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_jiahao"
                            android:layout_marginLeft="5dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp">

                            <ImageView
                                android:layout_centerInParent="true"
                                android:src="@mipmap/jiahao"
                                android:layout_width="10dp"
                                android:layout_height="10dp" />

                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/black_333333"
                        android:textSize="14sp"
                        android:text="配送方式"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_alignParentRight="true"
                        android:textColor="@color/black_333333"
                        android:textSize="14sp"
                        android:text="快递 免邮"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/black_333333"
                        android:textSize="14sp"
                        android:text="配送时间"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_alignParentRight="true"
                        android:textColor="@color/black_333333"
                        android:textSize="14sp"
                        android:text="17：00前付款，预计3月15日(周五)送达"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:elevation="2dp"
                android:background="@color/white_ffffff"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_centerVertical="true"
                        android:textColor="@color/black_333333"
                        android:textSize="14sp"
                        android:text="商品总额"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_centerVertical="true"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/black_333333"
                        android:layout_alignParentRight="true"
                        android:text="¥198.00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_centerVertical="true"
                        android:textColor="@color/black_333333"
                        android:textSize="14sp"
                        android:text="运费"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_centerVertical="true"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/black_333333"
                        android:layout_alignParentRight="true"
                        android:text="¥0.00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:elevation="4dp"
        android:background="@color/white_ffffff"
        android:id="@+id/rl_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textColor="#FF0004"
            android:textSize="19sp"
            android:text="¥228.60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignParentRight="true"
            android:background="#FF2F07"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/white_ffffff"
            android:text="提交订单"
            android:layout_width="120dp"
            android:layout_height="match_parent" />

    </RelativeLayout>

</RelativeLayout>
