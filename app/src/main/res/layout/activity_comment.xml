<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F7F7F7"
    tools:context="com.jingna.shopapp.pages.CommentActivity">

    <RelativeLayout
        style="@style/rl_top_bar">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                style="@style/iv_top_back" />

        </RelativeLayout>

        <TextView
            android:text="评价晒图"
            style="@style/tv_top_title" />

        <RelativeLayout
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <TextView
                android:text="提交"
                style="@style/tv_top_right" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:background="#F1F1F1"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:background="@color/white_ffffff"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="97dp">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="21dp"
                    android:src="@mipmap/lvxing"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="54dp"
                    android:layout_marginLeft="11dp"
                    android:ellipsize="end"
                    android:lines="2"
                    android:text="良品铺子 夏威夷果265g×3袋 零食坚果炒货 每日坚果大礼包大礼包大礼包大礼包大礼包…"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:textColor="#232325"
                android:textSize="14sp"
                android:text="分享你的使用体验吧~"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:background="@color/white_ffffff"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_margin="15dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@mipmap/bianji_address"
                        android:layout_width="17dp"
                        android:layout_height="17dp" />

                    <EditText
                        android:layout_marginLeft="6dp"
                        android:textSize="14sp"
                        android:textColor="@color/black_333333"
                        android:textColorHint="#D8D8D8"
                        android:background="@null"
                        android:hint="对商品进行评价，更全面，更客观~"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.RecyclerView
                        android:visibility="gone"
                        android:layout_margin="15dp"
                        android:id="@+id/rv_pic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:id="@+id/ll_add_pic"
                        android:layout_margin="15dp"
                        android:elevation="4dp"
                        android:background="@color/white_ffffff"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="105dp">

                        <ImageView
                            android:layout_marginTop="26dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@mipmap/paizhao"
                            android:layout_width="34dp"
                            android:layout_height="28dp" />

                        <TextView
                            android:layout_marginTop="8dp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/black_333333"
                            android:textSize="12sp"
                            android:text="添加照片"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:textColor="#232325"
                android:textSize="14sp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:text="评价~"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
            <LinearLayout
                android:orientation="vertical"
                android:background="@color/white_ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/black_333333"
                        android:textSize="12sp"
                        android:text="商品质量"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <RatingBar
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:stepSize="1"
                        android:rating="0"
                        android:numStars="5"
                        android:layout_marginRight="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/black_333333"
                        android:textSize="12sp"
                        android:text="快递包装"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <RatingBar
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:stepSize="1"
                        android:rating="0"
                        android:numStars="5"
                        android:layout_marginRight="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/black_333333"
                        android:textSize="12sp"
                        android:text="送货速度"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <RatingBar
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:stepSize="1"
                        android:rating="0"
                        android:numStars="5"
                        android:layout_marginRight="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/black_333333"
                        android:textSize="12sp"
                        android:text="配送员服务"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <RatingBar
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:stepSize="1"
                        android:rating="0"
                        android:numStars="5"
                        android:layout_marginRight="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
