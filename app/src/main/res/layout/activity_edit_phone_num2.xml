<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F8FA"
    tools:context="com.jingna.shopapp.pages.EditPhoneNum2Activity">

    <RelativeLayout
        android:background="@color/white_ffffff"
        android:layout_width="match_parent"
        android:layout_height="42dp">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerInParent="true"
                android:src="@mipmap/back_b"
                android:layout_width="9dp"
                android:layout_height="16dp" />

        </RelativeLayout>

        <TextView
            android:layout_centerInParent="true"
            android:textColor="#232325"
            android:textSize="18sp"
            android:text="修改手机号码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textColor="#232325"
        android:textSize="14sp"
        android:text="绑定新手机号码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:background="@color/white_ffffff"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="47dp">

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:textSize="15sp"
            android:textColor="#222222"
            android:text="+86"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.jingna.shopapp.widget.EditTextWithDel
            android:id="@+id/et_phonenum"
            android:inputType="number"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black_333333"
            android:textSize="16sp"
            android:hint="请输入手机号"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="17dp"
        android:textColor="#232325"
        android:textSize="14sp"
        android:text="短信验证码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.jingna.shopapp.widget.EditTextWithDel
            android:paddingRight="10dp"
            android:inputType="number"
            android:id="@+id/et_code"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:hint="请输入短信验证码"
            android:background="@drawable/bg_ffffff_7dp"
            android:layout_marginRight="9dp"
            android:layout_toLeftOf="@+id/btn_get_code"
            android:layout_width="match_parent"
            android:layout_height="45dp" />

        <Button
            android:id="@+id/btn_get_code"
            android:background="@drawable/bg_ff0004_7dp"
            android:textColor="@color/white_ffffff"
            android:textSize="16sp"
            android:text="获取验证码"
            android:layout_alignParentRight="true"
            android:layout_width="131dp"
            android:layout_height="45dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_next"
        android:background="@drawable/bg_ff0004_8dp"
        android:textColor="@color/white_ffffff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:text="提交"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

</LinearLayout>
