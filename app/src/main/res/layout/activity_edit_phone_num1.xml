<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F8FA"
    tools:context="com.jingna.shopapp.pages.EditPhoneNum1Activity">

    <RelativeLayout
        android:background="@color/white_ffffff"
        android:layout_width="match_parent"
        android:layout_height="42dp">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerInParent="true"
                android:src="@mipmap/back_b"
                android:layout_width="9dp"
                android:layout_height="16dp" />

        </RelativeLayout>

        <TextView
            android:layout_centerInParent="true"
            android:textColor="#232325"
            android:textSize="18sp"
            android:text="修改手机号码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:textColor="#232325"
        android:textSize="18sp"
        android:text="请完成以下认证"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp"
        android:textColor="#232325"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginTop="9dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.jingna.shopapp.widget.EditTextWithDel
            android:paddingRight="10dp"
            android:inputType="number"
            android:id="@+id/et_code"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:hint="请输入短信验证码"
            android:background="@drawable/bg_ffffff_7dp"
            android:layout_marginRight="9dp"
            android:layout_toLeftOf="@+id/btn_get_code"
            android:layout_width="match_parent"
            android:layout_height="45dp" />

        <Button
            android:id="@+id/btn_get_code"
            android:background="@drawable/bg_ff0004_7dp"
            android:textColor="@color/white_ffffff"
            android:textSize="16sp"
            android:text="获取验证码"
            android:layout_alignParentRight="true"
            android:layout_width="131dp"
            android:layout_height="45dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_next"
        android:background="@drawable/bg_ff0004_8dp"
        android:textColor="@color/white_ffffff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:text="下一步"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

</LinearLayout>
