<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#91908F"
                android:textSize="14sp"
                android:text="03.12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_gravity="right"
                android:layout_marginTop="4dp"
                android:textColor="#91908F"
                android:textSize="10sp"
                android:text="22:44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <RelativeLayout
            android:layout_alignTop="@+id/ll_right"
            android:layout_alignBottom="@+id/ll_right"
            android:id="@+id/rl_center"
            android:orientation="vertical"
            android:layout_marginLeft="70dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_shape"
                android:src="@mipmap/shape_top_gray"
                android:layout_width="14dp"
                android:layout_height="14dp" />
            
            <View
                android:layout_below="@+id/iv_shape"
                android:layout_centerHorizontal="true"
                android:background="#F1F1F1"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_right"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/rl_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginBottom="4dp"
                android:textColor="#91908F"
                android:textSize="14sp"
                android:text="运输中"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginBottom="20dp"
                android:textColor="#91908F"
                android:textSize="12sp"
                android:text="到哈尔滨市【哈尔滨火车站分部】"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
