<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg_ffffff_9dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@drawable/bg_ffffff_9dp"
        android:layout_width="315dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_nickname"
            android:layout_width="match_parent"
            android:layout_height="88dp">

            <LinearLayout
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:background="@null"
                    android:id="@+id/et_nickname"
                    android:textColor="@color/black_333333"
                    android:textSize="16sp"
                    android:hint="请输入昵称"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_marginTop="5dp"
                    android:background="#E9E9E9"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_below="@+id/rl_nickname"
            android:background="#E9E9E9"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_below="@+id/rl_nickname"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:id="@+id/tv_cancel"
                android:background="@drawable/bg_ffffff_bottom_left_9dp"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/black_333333"
                android:text="取消"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_sure"
                android:background="@drawable/bg_ff4f16_bottom_right_9dp"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white_ffffff"
                android:text="确定"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
