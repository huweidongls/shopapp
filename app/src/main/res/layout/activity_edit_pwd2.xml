<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8FA"
    android:orientation="vertical"
    tools:context="com.jingna.shopapp.pages.EditPwd2Activity">
    
    <RelativeLayout
        android:background="@color/white_ffffff"
        android:layout_width="match_parent"
        android:layout_height="42dp">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerInParent="true"
                android:src="@mipmap/back_b"
                android:layout_width="9dp"
                android:layout_height="16dp" />

        </RelativeLayout>

        <TextView
            android:layout_centerInParent="true"
            android:textColor="#232325"
            android:textSize="18sp"
            android:text="修改登录密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:layout_marginTop="14dp"
        android:layout_marginLeft="20dp"
        android:textColor="#232325"
        android:textSize="14sp"
        android:text="设置新的登录密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <RelativeLayout
        android:background="@color/white_ffffff"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <com.jingna.shopapp.widget.EditTextWithDel
            android:inputType="textPassword"
            android:id="@+id/et_pwd"
            android:layout_toLeftOf="@+id/rl_is_show"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black_333333"
            android:textSize="16sp"
            android:hint="6-20位数字/字母/字符组合"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/rl_is_show"
            android:layout_alignParentRight="true"
            android:layout_width="45dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_is_show"
                android:src="@mipmap/miwen"
                android:layout_centerInParent="true"
                android:layout_width="18dp"
                android:layout_height="12dp" />

        </RelativeLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/btn_sure"
        android:background="@drawable/bg_ff0004_8dp"
        android:textColor="@color/white_ffffff"
        android:text="确认"
        android:textSize="15sp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

</LinearLayout>
