<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:elevation="2dp"
            android:background="@mipmap/bg_coupons"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <LinearLayout
                android:id="@+id/ll_price"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="¥"
                        android:textColor="#FF0004"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:textSize="43sp"
                        android:text="20"
                        android:textColor="#FF0004"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_max_price"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/ll_price"
                    android:textColor="#FF0004"
                    android:textSize="12sp"
                    android:text="满129元可用"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginRight="15dp"
                android:layout_marginLeft="122dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_type"
                    android:gravity="center"
                    android:background="@drawable/bg_ff0004_8dp_pad_7dp"
                    android:textColor="@color/white_ffffff"
                    android:textSize="10sp"
                    android:text="全场通用"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp" />

                <TextView
                    android:id="@+id/tv_name"
                    android:ellipsize="end"
                    android:lines="2"
                    android:textColor="@color/black_333333"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"
                    android:text="限购[双喜专卖店]店铺商品"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_time"
                android:layout_marginLeft="122dp"
                android:layout_marginTop="52dp"
                android:textColor="@color/black_333333"
                android:textSize="10sp"
                android:text="2019.04.19-2019.05.03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
            <TextView
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="48dp"
                android:background="@drawable/bg_ff0004_11dp_bord"
                android:gravity="center"
                android:textColor="#FF0004"
                android:textSize="11sp"
                android:text="立即使用"
                android:layout_width="wrap_content"
                android:layout_height="22dp" />

            <TextView
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="122dp"
                android:layout_marginBottom="6dp"
                android:textSize="10sp"
                android:textColor="@color/black_333333"
                android:text="详细信息"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            
            <ImageView
                android:layout_marginRight="15dp"
                android:layout_marginBottom="7dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/coupons_bottom"
                android:layout_width="11dp"
                android:layout_height="11dp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
