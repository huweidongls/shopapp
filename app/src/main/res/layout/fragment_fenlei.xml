<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="#ffffff"
        android:id="@+id/rl_search"
        android:layout_width="match_parent"
        android:layout_height="42dp">

        <RelativeLayout
            android:id="@+id/rl_saoyisao"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:layout_width="37dp"
            android:layout_height="37dp">

            <ImageView
                android:id="@+id/iv_saoyisao"
                android:layout_centerInParent="true"
                android:src="@mipmap/saoyisao_dark"
                android:layout_width="23dp"
                android:layout_height="23dp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_search"
            android:orientation="horizontal"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:layout_toLeftOf="@+id/rl_message"
            android:layout_toRightOf="@+id/rl_saoyisao"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_index_search_dark"
            android:layout_width="match_parent"
            android:layout_height="32dp">

            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="11dp"
                android:src="@mipmap/search_light"
                android:layout_width="16dp"
                android:layout_height="15dp" />

            <TextView
                android:layout_marginLeft="6dp"
                android:textColor="#ffffff"
                android:textSize="13sp"
                android:text="每日坚果"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_message"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="37dp"
            android:layout_height="37dp">

            <ImageView
                android:id="@+id/iv_message"
                android:layout_centerInParent="true"
                android:src="@mipmap/message_dark"
                android:layout_width="25dp"
                android:layout_height="25dp" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_below="@+id/rl_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_fenlei"
            android:layout_width="90dp"
            android:layout_height="match_parent"/>

        <ScrollView
            android:background="@color/white_ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_title"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="5dp"
                        android:textSize="10sp"
                        android:textColor="@color/black_333333"
                        android:text="常用分类"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:descendantFocusability="blocksDescendants">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_changyong"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="5dp"
                        android:textSize="10sp"
                        android:textColor="@color/black_333333"
                        android:text="专场推荐"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:descendantFocusability="blocksDescendants">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_tuijian"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</RelativeLayout>
