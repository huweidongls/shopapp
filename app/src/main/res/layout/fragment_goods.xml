<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <cn.bleu.widget.slidedetails.SlideDetailsLayout
        android:id="@+id/slidedetails"
        app:default_panel="front"
        app:duration="300"
        app:percent="0.4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.jingna.shopapp.widget.ObservableScrollView
                android:id="@+id/scrollView"
                android:layout_above="@+id/rl_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.youth.banner.Banner
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="300dp">
                    </com.youth.banner.Banner>

                    <RelativeLayout
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="11dp"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_price"
                            android:textColor="#FF0004"
                            android:textSize="24sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:id="@+id/iv_follow"
                            android:layout_alignParentRight="true"
                            android:src="@mipmap/guanzhu"
                            android:layout_width="20dp"
                            android:layout_height="18dp" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_title"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/black_333333"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_marginTop="17dp"
                        android:layout_marginLeft="10dp"
                        android:background="#EBEBEB"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                    <LinearLayout
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_gravity="center_vertical"
                                android:textSize="12sp"
                                android:textColor="#82838E"
                                android:text="促销"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="7dp"
                                android:gravity="center"
                                android:background="@drawable/bg_ff0004_7dp_bord"
                                android:textSize="9sp"
                                android:textColor="#FF0004"
                                android:text="满减"
                                android:layout_width="28dp"
                                android:layout_height="13dp" />

                            <TextView
                                android:layout_marginLeft="9dp"
                                android:layout_gravity="center_vertical"
                                android:textColor="#454545"
                                android:textSize="13sp"
                                android:text="满18元减5元"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="6dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="31dp"
                                android:gravity="center"
                                android:background="@drawable/bg_ff0004_7dp_bord"
                                android:textColor="#FF0004"
                                android:textSize="9dp"
                                android:text="多买优惠"
                                android:layout_width="46dp"
                                android:layout_height="13dp" />

                            <TextView
                                android:layout_marginLeft="9dp"
                                android:layout_gravity="center_vertical"
                                android:textColor="#454545"
                                android:textSize="13sp"
                                android:text="满5件，总价打8折；满7件，总价打7折"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:background="#F6F6F6"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>

                    <RelativeLayout
                        android:id="@+id/rl_select"
                        android:layout_width="match_parent"
                        android:layout_height="56dp">

                        <LinearLayout
                            android:layout_marginRight="30dp"
                            android:layout_marginLeft="10dp"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_gravity="center_vertical"
                                android:textColor="#82838E"
                                android:textSize="12sp"
                                android:text="已选"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:ellipsize="end"
                                android:lines="1"
                                android:id="@+id/tv_has_select"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="8dp"
                                android:textColor="@color/black_333333"
                                android:textSize="14sp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <RelativeLayout
                            android:layout_marginRight="10dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_width="16dp"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_centerVertical="true"
                                android:background="#A6A6A6"
                                android:layout_width="2dp"
                                android:layout_height="2dp" />

                            <ImageView
                                android:layout_centerInParent="true"
                                android:background="#585757"
                                android:layout_width="4dp"
                                android:layout_height="4dp" />

                            <ImageView
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:background="#A6A6A6"
                                android:layout_width="2dp"
                                android:layout_height="2dp" />

                        </RelativeLayout>

                    </RelativeLayout>

                    <View
                        android:background="#F6F6F6"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_marginLeft="10dp"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_gravity="center_vertical"
                                    android:background="#FF0004"
                                    android:layout_width="4dp"
                                    android:layout_height="13dp" />

                                <TextView
                                    android:id="@+id/tv_comment_num"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="@color/black_333333"
                                    android:textSize="13sp"
                                    android:text="评价(94万）"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginRight="10dp"
                                android:layout_alignParentRight="true"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_gravity="center_vertical"
                                    android:textColor="#686868"
                                    android:textSize="13sp"
                                    android:text="好评度"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:id="@+id/tv_favorablerate"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="#FF0004"
                                    android:textSize="13sp"
                                    android:text="99%"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <ImageView
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="5dp"
                                    android:src="@mipmap/right_b"
                                    android:layout_width="5dp"
                                    android:layout_height="10dp" />

                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:descendantFocusability="blocksDescendants"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rv_comment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_all_comment"
                            android:gravity="center"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/bg_dadada_17dp_bord"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="17dp"
                            android:textColor="@color/black_333333"
                            android:textSize="13sp"
                            android:text="查看全部评价"
                            android:layout_width="115dp"
                            android:layout_height="34dp" />

                    </LinearLayout>

                    <View
                        android:background="#F6F6F6"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iv_shop_avatar"
                                android:layout_marginLeft="13dp"
                                android:src="@mipmap/shengxian"
                                android:layout_width="49dp"
                                android:layout_height="49dp" />

                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_marginLeft="9dp"
                                android:id="@+id/tv_shop_name"
                                android:layout_toRightOf="@+id/iv_shop_avatar"
                                android:textStyle="bold"
                                android:textColor="#232325"
                                android:textSize="14sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/tv_shop_follow_num"
                                android:layout_below="@+id/tv_shop_name"
                                android:layout_marginTop="5dp"
                                android:layout_alignLeft="@+id/tv_shop_name"
                                android:textColor="#232325"
                                android:textSize="10sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="11dp"
                                android:src="@mipmap/right_b"
                                android:layout_width="3dp"
                                android:layout_height="8dp" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="34dp">

                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">

                                <RelativeLayout
                                    android:background="@drawable/bg_dadada_17dp_bord"
                                    android:layout_centerInParent="true"
                                    android:layout_width="130dp"
                                    android:layout_height="match_parent">

                                    <LinearLayout
                                        android:layout_centerInParent="true"
                                        android:orientation="horizontal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            android:layout_gravity="center_vertical"
                                            android:src="@mipmap/kefu"
                                            android:layout_width="13dp"
                                            android:layout_height="13dp" />

                                        <TextView
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginLeft="4dp"
                                            android:textColor="#232325"
                                            android:textSize="13sp"
                                            android:text="联系客服"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" />

                                    </LinearLayout>

                                </RelativeLayout>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent">

                                <RelativeLayout
                                    android:id="@+id/rl_to_shop"
                                    android:background="@drawable/bg_dadada_17dp_bord"
                                    android:layout_centerInParent="true"
                                    android:layout_width="130dp"
                                    android:layout_height="match_parent">

                                    <LinearLayout
                                        android:layout_centerInParent="true"
                                        android:orientation="horizontal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            android:layout_gravity="center_vertical"
                                            android:src="@mipmap/dianpu"
                                            android:layout_width="13dp"
                                            android:layout_height="13dp" />

                                        <TextView
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginLeft="4dp"
                                            android:textColor="#232325"
                                            android:textSize="13sp"
                                            android:text="进店逛逛"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" />

                                    </LinearLayout>

                                </RelativeLayout>

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:background="#F6F6F6"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp">

                        <TextView
                            android:layout_centerInParent="true"
                            android:textColor="#686868"
                            android:textSize="16sp"
                            android:text="上拉查看图文详情"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                </LinearLayout>

            </com.jingna.shopapp.widget.ObservableScrollView>

            <RelativeLayout
                android:background="#FFFFFF"
                android:layout_alignParentBottom="true"
                android:id="@+id/rl_bottom"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/tv_buy"
                    android:background="#FFB800"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:text="立即购买"
                    android:layout_width="109dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tv_insert_car"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:background="#FF2F07"
                    android:textColor="@color/white_ffffff"
                    android:text="加入购物车"
                    android:layout_toLeftOf="@+id/tv_buy"
                    android:layout_width="109dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_toLeftOf="@+id/tv_insert_car"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@mipmap/kefu"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:layout_width="20dp"
                            android:layout_height="18dp" />

                        <TextView
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:textColor="#393838"
                            android:textSize="9sp"
                            android:text="联系客服"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_shop"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@mipmap/dianpu"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:layout_width="20dp"
                            android:layout_height="18dp" />

                        <TextView
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:textColor="#393838"
                            android:textSize="9sp"
                            android:text="店铺"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@mipmap/gouwuche"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:layout_width="20dp"
                            android:layout_height="18dp" />

                        <TextView
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:textColor="#393838"
                            android:textSize="9sp"
                            android:text="购物车"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_top"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:id="@+id/tv1"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#FF0004"
                    android:text="商品介绍"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <View
                    android:layout_gravity="center_vertical"
                    android:background="#D7D7D7"
                    android:layout_width="1dp"
                    android:layout_height="12dp"/>

                <TextView
                    android:id="@+id/tv2"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#686868"
                    android:text="规格参数"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <View
                    android:layout_gravity="center_vertical"
                    android:background="#D7D7D7"
                    android:layout_width="1dp"
                    android:layout_height="12dp"/>

                <TextView
                    android:id="@+id/tv3"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#686868"
                    android:text="包装售后"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <ScrollView
                android:layout_below="@+id/ll_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_marginRight="5dp"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/ll1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <View
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="15dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_toLeftOf="@+id/tv_name"
                                    android:background="#D7D7D7"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"/>

                                <TextView
                                    android:id="@+id/tv_name"
                                    android:layout_centerInParent="true"
                                    android:textColor="#797979"
                                    android:textSize="13sp"
                                    android:text="商品信息"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <View
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_toRightOf="@+id/tv_name"
                                    android:background="#D7D7D7"
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"/>

                            </RelativeLayout>

                            <ImageView
                                android:layout_marginTop="13dp"
                                android:src="@mipmap/p1"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:src="@mipmap/p2"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:src="@mipmap/p3"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:src="@mipmap/p4"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:src="@mipmap/p5"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:src="@mipmap/p6"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:src="@mipmap/p7"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/rl2"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tv_rl2"
                                android:textSize="20sp"
                                android:textColor="@color/black_333333"
                                android:text="显示规格参数表格"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl3"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:textSize="20sp"
                                android:textColor="@color/black_333333"
                                android:text="显示包装售后"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </RelativeLayout>

                    </RelativeLayout>

                </LinearLayout>

            </ScrollView>

        </RelativeLayout>

    </cn.bleu.widget.slidedetails.SlideDetailsLayout>

</RelativeLayout>
