<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="17dp"
            android:src="@mipmap/fushi"
            android:layout_width="120dp"
            android:layout_height="102dp" />

        <RelativeLayout
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:maxLines="2"
                android:ellipsize="end"
                android:id="@+id/tv_title"
                android:layout_marginRight="24dp"
                android:layout_marginTop="13dp"
                android:textColor="@color/black_333333"
                android:textSize="14sp"
                android:text="良品铺子夏威夷果265g×3袋零食坚果炒货每日坚果大礼包大礼包…"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="6dp"
                android:layout_below="@+id/tv_title"
                android:id="@+id/rv_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_marginTop="9dp"
                android:layout_below="@+id/rv_sign"
                android:id="@+id/ll_price"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_price"
                    android:textSize="16sp"
                    android:textColor="#FF0004"
                    android:text="¥149.90"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/bg_ff0004_7dp_bord"
                    android:textColor="#FF0004"
                    android:text="满40减3"
                    android:textSize="9sp"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_comment"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/ll_price"
                android:textColor="#797979"
                android:textSize="11sp"
                android:text="22万+条评价  99%好评"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_shop_name"
                android:layout_marginTop="3dp"
                android:textColor="#797979"
                android:textSize="11sp"
                android:layout_below="@+id/tv_comment"
                android:text="良品铺子旗舰店 >"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/iv_add_shop_car"
                android:layout_marginTop="82dp"
                android:layout_marginRight="8dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/gouwuche_red"
                android:layout_width="25dp"
                android:layout_height="25dp" />

            <View
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_shop_name"
                android:background="#F1F1F1"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
