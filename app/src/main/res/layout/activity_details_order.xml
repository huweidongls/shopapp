<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.jingna.shopapp.pages.DetailsOrderActivity">

    <RelativeLayout
        android:id="@+id/rl_top"
        style="@style/rl_top_bar">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                style="@style/iv_top_back" />
        </RelativeLayout>

        <TextView
            android:text="订单详情"
            style="@style/tv_top_title" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom"
        android:layout_below="@+id/rl_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:background="@drawable/bg_f10200_ff4d16"
                android:layout_width="match_parent"
                android:layout_height="110dp">

                <TextView
                    android:id="@+id/tv_order_status"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"
                    android:textSize="18sp"
                    android:textColor="@color/white_ffffff"
                    android:text="正在出货"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="-42dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_ffffff_9dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginBottom="28dp"
                    android:layout_marginTop="28dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginLeft="13dp"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/dingwei"
                            android:layout_width="15dp"
                            android:layout_height="15dp" />

                        <TextView
                            android:id="@+id/tv_address_name"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="8dp"
                            android:textStyle="bold"
                            android:textColor="@color/black_333333"
                            android:textSize="15sp"
                            android:text="张三"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="21dp"
                            android:textStyle="bold"
                            android:textColor="@color/black_333333"
                            android:textSize="15sp"
                            android:text="155****4567"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="7dp"
                        android:layout_marginLeft="33dp"
                        android:textColor="@color/black_333333"
                        android:textSize="13sp"
                        android:text="地址：黑龙江哈尔滨市南岗区汉广街41号408室"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="42dp">

                    <ImageView
                        android:layout_marginLeft="14dp"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/dianpu"
                        android:layout_width="17dp"
                        android:layout_height="15dp" />

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="7dp"
                        android:textSize="14sp"
                        android:textColor="@color/black_333333"
                        android:text="贝脆思旗舰店"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="9dp"
                        android:src="@mipmap/right_b"
                        android:layout_width="3dp"
                        android:layout_height="8dp" />

                </LinearLayout>

                <View
                    android:background="@color/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:descendantFocusability="blocksDescendants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_goods_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>
                
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/kefu"
                            android:layout_width="13dp"
                            android:layout_height="13dp" />

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="7dp"
                            android:textColor="@color/black_333333"
                            android:textSize="13sp"
                            android:text="联系客服"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </RelativeLayout>
                
            </LinearLayout>

            <View
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="13dp"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:textColor="@color/black_333333"
                        android:textSize="14sp"
                        android:text="订单编号："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:textSize="14sp"
                        android:textColor="@color/black_333333"
                        android:text="80646226239"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:background="@drawable/bg_979797_10dp_bord"
                        android:textColor="@color/black_333333"
                        android:textSize="11sp"
                        android:text="复制"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="13dp"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:textColor="@color/black_333333"
                        android:textSize="14sp"
                        android:text="下单时间："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:textSize="14sp"
                        android:textColor="@color/black_333333"
                        android:text="2018-10-13 12:43:59"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:layout_marginTop="12dp"
                    android:background="@color/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="13dp"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:textColor="@color/black_333333"
                        android:textSize="14sp"
                        android:text="支付方式："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:textSize="14sp"
                        android:textColor="@color/black_333333"
                        android:text="微信支付"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="13dp"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:textColor="@color/black_333333"
                        android:textSize="14sp"
                        android:text="支付时间："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:textSize="14sp"
                        android:textColor="@color/black_333333"
                        android:text="2018-10-13 12:43:59"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:layout_marginTop="12dp"
                    android:background="@color/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="13dp"
                        android:layout_gravity="center_vertical"
                        android:textStyle="bold"
                        android:textColor="@color/black_333333"
                        android:textSize="14sp"
                        android:text="配送方式："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:textSize="14sp"
                        android:textColor="@color/black_333333"
                        android:text="普通快递"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <RelativeLayout
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/black_333333"
                        android:text="商品总额"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:layout_alignParentRight="true"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:textColor="@color/black_333333"
                        android:text="¥29.90"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="@color/black_333333"
                        android:text="运费"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:layout_alignParentRight="true"
                        android:textStyle="bold"
                        android:textSize="13sp"
                        android:textColor="@color/black_333333"
                        android:text="¥0.00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:gravity="right"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="52dp">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black_333333"
                    android:textSize="12sp"
                    android:text="实付款："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:textColor="#FF0004"
                    android:textSize="19sp"
                    android:text="¥29.90"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:gravity="right"
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_delete_order"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_979797_15dp_bord"
            android:layout_marginRight="14dp"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="13sp"
            android:text="删除订单"
            android:layout_width="80dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/tv_check_logistics"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_979797_15dp_bord"
            android:layout_marginRight="14dp"
            android:gravity="center"
            android:textColor="#333333"
            android:textSize="13sp"
            android:text="查看物流"
            android:layout_width="80dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/tv_buy_again"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_ff0004_15dp_bord"
            android:layout_marginRight="14dp"
            android:gravity="center"
            android:textColor="#FF0004"
            android:textSize="13sp"
            android:text="再次购买"
            android:layout_width="80dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/tv_cancel_order"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_ff0004_15dp_bord"
            android:layout_marginRight="14dp"
            android:gravity="center"
            android:textColor="#FF0004"
            android:textSize="13sp"
            android:text="取消订单"
            android:layout_width="80dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/tv_return_price"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_ff0004_15dp_bord"
            android:layout_marginRight="14dp"
            android:gravity="center"
            android:textColor="#FF0004"
            android:textSize="13sp"
            android:text="退款"
            android:layout_width="80dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/tv_to_pay"
            android:layout_gravity="center_vertical"
            android:background="@drawable/bg_ff0004_15dp_bord"
            android:layout_marginRight="14dp"
            android:gravity="center"
            android:textColor="#FF0004"
            android:textSize="13sp"
            android:text="去支付"
            android:layout_width="80dp"
            android:layout_height="30dp" />

    </LinearLayout>

</RelativeLayout>
